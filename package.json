{
  "name": "myai-backend",
  "version": "1.0.0",
  "description": "A TypeScript Node.js API for MyAI knowledge base and chat system",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc && npm run copy-files",
    "copy-files": "mkdir -p dist/public && cp -r src/public/* dist/public/ || true",
    "vercel-build": "node vercel-build.js",
    "update-api-docs": "node export-swagger.js > swagger-specs.json && node -e \"const specs = require('./swagger-specs.json'); specs.servers[0].url = 'https://myai-backend.vercel.app'; specs.servers[0].description = '生产服务器'; console.log(JSON.stringify(specs, null, 2));\" > swagger-prod.json && node update-api-docs.js",
    "prestart": "npm run build",
    "dev": "nodemon --exec ts-node src/index.ts",
    "db:setup": "psql -f scripts/setup-db.sql",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@langchain/community": "^0.3.41",
    "@langchain/openai": "^0.5.6",
    "@prisma/client": "^6.6.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.17",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "chromadb": "^2.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.24",
    "mammoth": "^1.9.0",
    "multer": "^1.4.5-lts.2",
    "openai": "^4.28.0",
    "pdf-parse": "^1.1.1",
    "pg": "^8.15.5",
    "proxy-agent": "^6.5.0",
    "redoc-express": "^2.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.19",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.11.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "prisma": "^6.6.0"
  },
  "engines": {
    "node": ">=18.x"
  }
}

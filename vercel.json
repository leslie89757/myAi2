{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "vercel-build.js",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "node vercel-build.js"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/health", "dest": "/api/index.js" },
    { "src": "/stream-test", "dest": "/api/index.js" },
    { "src": "/simple-test", "dest": "/api/index.js" },
    { "src": "/knowledge-chat", "dest": "/api/index.js" },
    { "src": "/test-upload", "dest": "/api/index.js" }, 
    { "src": "/api-docs", "dest": "/api/index.js" },
    { "src": "/api-docs/(.*)", "dest": "/api/index.js" },
    { "src": "/api-docs.json", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}
{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/health",
      "dest": "dist/index.js"
    },
    {
      "src": "/stream-test",
      "dest": "dist/index.js"
    },
    {
      "src": "/simple-test",
      "dest": "dist/index.js"
    },
    {
      "src": "/api-docs",
      "dest": "dist/index.js"
    },
    {
      "src": "/(.*\\.(js|css|html|svg|jpg|jpeg|png|ico))",
      "dest": "dist/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}